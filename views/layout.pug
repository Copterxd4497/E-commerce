//- layout.pug - Base layout template
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title || "ShopEase - Your Online Store"
    link(rel="stylesheet", href="/css/style.css")

  body
    //- Header Component
    header
      .container
        .header-content
          a.logo(href="/") ShopEase
          nav
            ul.nav-menu
              li: a(href="/") Home
              li: a(href="/products") Products
              li: a(href="/categories") Categories
              li: a(href="/contact") Contact
          .user-actions
            if user
              a.btn.btn-secondary(href="#", onclick="showPage('profile')") Profile
              a.cart-icon(href="#", onclick="showPage('cart')")
                | ðŸ›’
                span.cart-count= cartCount || 0
            else
              a.btn.btn-secondary(href="#", onclick="showPage('login')") Login
              a.btn.btn-primary(href="#", onclick="showPage('register')") Register
              a.cart-icon(href="#", onclick="showPage('cart')")
                | ðŸ›’
                span.cart-count= cartCount || 0

    //- Search Section
    section.search-section
      .container
        .search-bar
          input.search-input(type="text", placeholder="Search for products...")
          button.search-btn Search

    //- Main Content
    main
      block content

