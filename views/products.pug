extends layout

block content
  main#products.page
    .container
      h1.page-title All Products

      .product-grid
        if products && products.length
          each product in products
            .product-card
              .product-image= product.icon
              .product-info
                h3.product-title= product.name
                .product-price $#{product.price}
                p.product-description= product.description
                button.add-to-cart Add to Cart
        else if defaultProducts && defaultProducts.length
          each product in defaultProducts
            .product-card
              .product-image= product.icon
              .product-info
                h3.product-title= product.name
                .product-price $#{product.price}
                p.product-description= product.description
                button.add-to-cart Add to Cart
        else
          p there are no existed cards
